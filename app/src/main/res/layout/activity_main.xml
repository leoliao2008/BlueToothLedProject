<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_type_1"
    tools:context="com.liansong.blueled.activities.MainActivity">

   <com.liansong.blueled.customized.LedStatusViewer
       android:id="@+id/main_cstm_led_viewer"
       android:layout_margin="@dimen/margin_small"
       android:padding="@dimen/margin_small"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/main_tv_timing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_type_1"
        android:text="00:00.00"
        android:textSize="@dimen/text_size_type_2"
        android:gravity="center"
        android:layout_margin="@dimen/margin_small"/>
    <ListView
        android:id="@+id/main_lstv_control_record"
        android:background="@drawable/shape_type_1"
        android:layout_margin="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/shape_type_1"
        android:id="@+id/main_btn_clear_log"
        android:text="Clear Log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
