<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ScanResult"
            android:textSize="@dimen/text_size_type_3"
            android:gravity="center"
            android:padding="@dimen/padding_type_1"
            android:textColor="@color/colorWhite"
            />

        <TextView
            android:visibility="invisible"
            android:id="@+id/scan_result_scanning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanning..."
            android:textColor="@color/colorWhite"
            android:layout_gravity="end|center_vertical"
            android:padding="@dimen/padding_type_2"/>
    </FrameLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/scan_result_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/scan_result_stop_scan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Stop Scan"/>

        <Button
            android:id="@+id/scan_result_retry"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ReTry"/>

        <Button
            android:id="@+id/scan_result_exit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Exit"/>

    </LinearLayout>

</LinearLayout>
